storage:
  smallFiles: true
  dbPath: /mongo/data
  journal:
    enabled: true
systemLog:
   destination: file
   path: "/var/log/mongodb/mongod.log"
   logAppend: true
   logRotate: rename
   timeStampFormat: iso8601-local
processManagement:
   fork: true
   pidFilePath: "/var/run/mongodb/mongod.pid"
<% if node[:install][:MongoHost]!='127.0.0.1' -%>
replication:
   replSetName: <%= node[:install][:StackName] %>
<% end -%>
net:
   bindIp: 0.0.0.0