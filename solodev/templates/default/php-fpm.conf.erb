[www]
listen = [::]:9000
listen.allowed_clients = 127.0.0.1
clear_env = yes
listen.owner = apache
listen.group = apache
listen.mode = 0660
chdir = /var/www
catch_workers_output = yes

user = apache
group = apache

pm = dynamic
pm.start_servers = 5
pm.min_spare_servers = 5
pm.max_spare_servers = 35
<% if node[:opsworks][:instance][:instance_type].include?  "large" -%>
pm.max_requests = 1000
pm.max_children = 400
<% else -%>
pm.max_requests = 500
pm.max_children = 200
<% end -%>

security.limit_extensions = .php .stml .inc .tpl .pi .xml
request_terminate_timeout = 0
rlimit_core = unlimited

php_admin_flag[log_errors] = on
php_value[session.save_handler] = files
php_value[session.save_path]    = /var/opt/remi/php72/lib/php/session
php_value[soap.wsdl_cache_dir]  = /var/opt/remi/php72/lib/php/wsdlcache
php_admin_value[error_log] = /var/opt/remi/php72/log/php-fpm/www-error.log
slowlog = /var/opt/remi/php72/log/php-fpm/www-slow.log